{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "allowJs": true,
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/custom-types"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "setupTests.js", "__mocks__"],
  "exclude": ["node_modules"]
}
